#!/usr/bin/env bash

export GCC_VERSION=9.1.0
export GCC_VERSION_SHORT=9.10
export AUTOCONF_VERSION=2.69
export AUTOMAKE_VERSION=1.15.1

# tarball location
export GCC_ARCHIVE="http://ftpmirror.gnu.org/gcc/gcc-${GCC_VERSION}/gcc-${GCC_VERSION}.tar.xz"
